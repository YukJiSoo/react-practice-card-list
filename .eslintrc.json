{
    "extends": ["react-app", "prettier"],
    "plugins": ["react-hooks", "simple-import-sort"],
    "rules": {
        "react-hooks/rules-of-hooks": "error",
        "padding-line-between-statements": [
            "error",
            {
                "blankLine": "always",
                "prev": "*",
                "next": "return"
            }
        ],
        "max-depth": [
            "error",
            {
                "max": 3
            }
        ],
        "no-unneeded-ternary": [
            "error",
            {
                "defaultAssignment": false
            }
        ],
        "simple-import-sort/sort": "error",
        "sort-imports": "off",
        "import/order": "off"
    }
}
